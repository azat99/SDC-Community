<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/silverthread1280x960"
    tools:context="com.example.azatk.sdccommunity.StartActivty">

    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Sign UP"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Log in"
        android:color="#00f7f6f6"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/start_reg_btn"
        android:layout_alignStart="@+id/start_reg_btn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@drawable/untitled"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/start_login_btn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
